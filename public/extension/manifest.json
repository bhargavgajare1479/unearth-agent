{
  "manifest_version": 3,
  "name": "Unearth Agent",
  "version": "1.0",
  "description": "Analyzes social media content for misinformation using Unearth Agent.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.twitter.com/*",
    "https://*.instagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*",
        "https://*.instagram.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_title": "Unearth Agent"
  }
}
