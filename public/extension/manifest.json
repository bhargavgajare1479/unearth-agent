{
  "manifest_version": 3,
  "name": "Unearth Agent",
  "version": "1.0",
  "description": "Analyzes social media content for misinformation using the Unearth Agent engine.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.twitter.com/*", "https://x.com/*", "https://*.instagram.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Unearth Agent"
  },
  "web_accessible_resources": [
    {
        "resources": ["/images/*.png"],
        "matches": ["<all_urls>"]
    }
  ]
}
